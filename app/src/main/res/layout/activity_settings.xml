<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_main"
    android:background="?attr/colorPrimary">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolbarTheme"
        app:navigationIcon="@drawable/arrow_back_light_mode"
        app:title="@string/settings"
        app:titleTextAppearance="@style/TextHeader" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <TextView
            style="@style/TextViewList"
            android:text="@string/settings_list_element_0" />

        <Switch
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="3dp"
            android:checked="false"
            android:thumbTint="@color/selector_switch_thumb"
            android:trackTint="@color/selector_switch_track"
            tools:checked="false"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextViewList"
            android:text="@string/settings_list_element_1" />

        <ImageView
            android:id="@+id/share_app_button"
            style="@style/ImageViewList"
            android:src="@drawable/share_light_mode"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextViewList"
            android:text="@string/settings_list_element_2" />

        <ImageView
            android:id="@+id/write_to_support_button"
            style="@style/ImageViewList"
            android:src="@drawable/support_light_mode"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextViewList"
            android:text="@string/settings_list_element_3"/>

        <ImageView
            android:id="@+id/terms_of_use_button"
            style="@style/ImageViewList"
            android:src="@drawable/arrow_forward_light_mode"/>
    </FrameLayout>

</LinearLayout>