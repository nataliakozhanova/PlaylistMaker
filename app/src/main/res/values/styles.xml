<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BigButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">

        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="TextHeader">
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="TextViewListSettings">
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="ImageViewListSettings">
        <item name="tint">?attr/colorOnSecondary</item>
    </style>

    <style name="TextViewListArtistName">
        <item name="android:textSize">11sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>